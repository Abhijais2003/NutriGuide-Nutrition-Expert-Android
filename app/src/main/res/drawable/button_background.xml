<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Border radius -->
            <solid android:color="#50FF68" /> <!-- Background color when pressed -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Border radius -->
            <solid android:color="#62FF68" /> <!-- Default background color -->
        </shape>
    </item>
</selector>
